# disable debuginfo
%define debug_package %{nil}
%define pkgname anyconfig-configobj-backend

%global sumtxt Backend for python-anyconfig to load and dump configobj data

Name:           python-%{pkgname}
Version:        @VERSION@
Release:        1%{?dist}
Summary:        %{sumtxt}
Group:          Development/Libraries
License:        MIT
URL:            https://github.com/ssato/%{name}
#Source0:        https://github.com/ssato/%{name}/tarball/master/%{name}-%{version}.tar.gz
Source0:        %{pkgname}-%{version}.tar.gz
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:      noarch
Requires:       python-anyconfig
Requires:       python-configobj
Requires:       python-setuptools

%description
This is ConfigObj backend module for anyconfig.

Anyconfig is a python library to provide generic access to configuration files
in some formats such like INI, JSON and YAML.

%if 0%{?fedora} || 0%{?rhel} > 7
%bcond_without python3
%else
%bcond_with python3
%endif

%if 0%{?rhel} == 7
BuildRequires:  python-devel
BuildRequires:  python-setuptools
%else
BuildRequires:  python2-devel
BuildRequires:  python2-setuptools
%endif
%if %{with python3}
BuildRequires:  python3-devel
BuildRequires:  python3-setuptools
%endif

%if %{with python3}
%package -n python3-%{pkgname}
Summary:        %{sumtxt}
Group:          Development/Libraries
Requires:       python3-anyconfig
Requires:       python3-configobj
Requires:       python3-setuptools

%description -n python3-%{pkgname}
This is ConfigObj backend module for anyconfig.

Anyconfig is a python library to provide generic access to configuration files
in some formats such like INI, JSON and YAML.
%endif

%prep
%setup -q -n %{pkgname}-%{version}

%if %{with python3}
rm -rf %{py3dir}
cp -a . %{py3dir}
%endif

%build
%{__python} setup.py build

%if %{with python3}
pushd %{py3dir}
%{__python3} setup.py build
popd
%endif

%install
rm -rf $RPM_BUILD_ROOT
%{__python} setup.py install -O1 --skip-build --root $RPM_BUILD_ROOT

%if %{with python3}
pushd %{py3dir}
%{__python3} setup.py install -O1 --skip-build --root $RPM_BUILD_ROOT
popd
%endif

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%doc README.rst
%{python_sitelib}/*

%if %{with python3}
%files -n python3-%{pkgname}
%defattr(644,root,root,755)
%doc README.rst
%{python3_sitelib}/*
%endif

